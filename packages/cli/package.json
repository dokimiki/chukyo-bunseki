{
    "name": "@chukyo-bunseki/cli",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "main": "dist/index.js",
    "bin": {
        "chukyo-cli": "dist/index.js"
    },
    "scripts": {
        "build": "bun build src/index.ts --outdir=dist --target=bun --external=@chukyo-bunseki/mcp-service --external=@chukyo-bunseki/requirements-agent",
