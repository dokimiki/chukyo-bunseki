        "demo": "bun demo.ts",
        "test": "bun test --coverage"
    },
    "dependencies": {
        "@chukyo-bunseki/requirements-agent": "workspace:*",
        "@chukyo-bunseki/mcp-service": "workspace:*",
        "cmd-ts": "^0.13.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "typescript": "^5"
    }
}
