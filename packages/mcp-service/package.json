{
    "name": "@chukyo-bunseki/mcp-service",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "main": "dist/server.js",
    "scripts": {
        "build": "bun build src/server.ts --outdir=dist --target=bun --external=playwright --external=@chukyo-bunseki/playwright-worker",
