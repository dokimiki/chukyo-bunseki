{
    "name": "@chukyo-bunseki/playwright-worker",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "main": "src/index.ts",
    "exports": {
        ".": "./src/index.ts"
    },
    "scripts": {
        "build": "bun build src/index.ts --outdir=dist --target=bun --external=playwright",
        "dev": "bun run src/index.ts",
        "demo": "bun run demo.ts",
        "test": "bun test --coverage",
        "test:watch": "bun test --watch",
        "playwright:install": "bunx playwright install"
    },
    "dependencies": {
        "playwright": "^1.53.0",
        "@chukyo-bunseki/requirements-agent": "workspace:*"
    },
    "devDependencies": {
        "@playwright/test": "^1.53.0",
        "@types/bun": "latest",
        "typescript": "^5.8.3"
    }
}
